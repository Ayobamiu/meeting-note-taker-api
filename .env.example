# Nylas API Configuration
NYLAS_API_KEY=your_nylas_api_key_here
NYLAS_API_URL=https://api.nylas.com

# Server Configuration
PORT=3000
NODE_ENV=development

# Webhook Configuration (for receiving updates from Nylas)
